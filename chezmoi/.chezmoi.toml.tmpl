{{- /* check if running interactively */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* initialize the variable defaults */ -}}
{{- $name := "Chris Burnham" -}}

{{- /* initialize the name variable */ -}}
{{- if $interactive -}}
  {{- if hasKey . "name" -}}
    {{- $orig_name := .name -}}
    {{- $name = promptString "Name" $orig_name -}}
  {{- else -}}
    {{- $name = promptString "Name" $name -}}
  {{- end -}}
{{- end -}}

