# --------------------------------------------------------------------------------------------------
#   @description    :   Load script libraries
# --------------------------------------------------------------------------------------------------
{{ template "script-library" }}
# ==================================================================================================

# --------------------------------------------------------------------------------------------------
#   @description    :   Pre-flight
# --------------------------------------------------------------------------------------------------
info "setting log level to debug." -category "Homebrew" -icon "üç∫"
LOG_LEVEL=5
# ==================================================================================================

# --------------------------------------------------------------------------------------------------
#   @description    :   Install Homebrew
# --------------------------------------------------------------------------------------------------
debug "verifying installation of homebrew." -category "Homebrew" -icon "üç∫"

if ! check_binary brew; then
  info "homebrew is not installed." -category "Homebrew" -icon "üç∫"
  info "Installing Homebrew, a MacOS package manager. Follow the instructions!" -category "Homebrew" -icon "üç∫"
  {{ template "script-sudo" . }}

  cpu_brand_string="$(sysctl -n machdep.cpu.brand_string)"
  if [[ "${cpu_brand_string}" =~ "Apple" ]]; then
    NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    eval "$(/opt/homebrew/bin/brew shellenv)"
  elif [[ "${cpu_brand_string}" =~ "Intel" ]]; then
    NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  else
    critical "unable to install homebrew. ${cpu_brand_string} is an unsupported CPU type." -category "Homebrew" -icon "üç∫"
  fi

  debug "validating installation of homebrew." -category "Homebrew" -icon "üç∫"
  if ! check_binary brew; then
    critical "homebrew is not installed." -category "Homebrew" -icon "üç∫"
  fi

else
  debug "homebrew is installed." -category "Homebrew" -icon "üç∫"

fi
# ==================================================================================================

# --------------------------------------------------------------------------------------------------
#   @description    :   Install mas
# --------------------------------------------------------------------------------------------------
debug "verifying installation of mas." -category "mas" -icon "üß∫"

if ! check_binary mas; then
  info "mas is not installed." -category "mas" -icon "üß∫"
  info "Installing mas, Mac Apple Store CLI." -category "mas" -icon "üß∫"
  brew install mas

  debug "validating installation of mas." -category "mas" -icon "üß∫"
  if ! check_binary mas; then
    critical "mas is not installed." -category "mas" -icon "üß∫"
  fi

else
  debug "mas is installed." -category "mas" -icon "üß∫"

fi
# ==================================================================================================
