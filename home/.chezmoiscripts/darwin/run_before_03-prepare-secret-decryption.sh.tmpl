{{ if .personal }}
debug "[ğŸ”        Lastpass] Verifying installation."

if ! check_binary lpass; then
  info "[ğŸ”        Lastpass] Application is not installed."
  info "[ğŸ”        Lastpass] Installing lastpass-cli, the Lastpass command line interface tool."
  brew install "lastpass-cli"

else
  debug "[ğŸ”        Lastpass] Application is installed."

fi

info "[ğŸ”        Lastpass] Configuring lastpass-cli."
lastpass_email={{- .personal_lastpass_email }}

debug "[ğŸ”        Lastpass] Checking lastpass-cli status."
lpass_status="$(lpass status)"

if [[ "${lpass_status}" =~ "Logged in as ${lastpass_email}" ]]; then
  debug "[ğŸ”        Lastpass] Already logged into lastpass-cli."

else
  info "[ğŸ”        Lastpass] Logging into lastpass-cli."
  lpass login "${lastpass_email}"

fi

debug "[ğŸ”        Lastpass] lastpass-cli configured."

{{ else }}
debug "[ğŸ”        Lastpass] Skipping. Does not apply to this Chezmoi profile."

{{ end }}
