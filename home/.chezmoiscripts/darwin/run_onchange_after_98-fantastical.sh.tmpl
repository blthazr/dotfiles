info "setting log level to debug." -category "Fantastical" -icon "ðŸ“…"
LOG_LEVEL=5

debug "validating installation of fantastical." -category "Fantastical" -icon "ðŸ“…"
if ! check_macos_app "Fantastical.app"; then
  error "fantastical is not installed." -category "Fantastical" -icon "ðŸ“…"
  exit 0
else
  debug "fantastical is installed." -category "Fantastical" -icon "ðŸ“…"
  info "closing fantastical, to prevent it from overriding changes." -category "Fantastical" -icon "ðŸ“…"
  osascript -e 'tell application "Fantastical" to quit'
  killall "cfprefsd"
fi
