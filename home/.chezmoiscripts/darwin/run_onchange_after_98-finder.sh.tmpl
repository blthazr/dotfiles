# defaults write com.apple.Finder FXPreferredViewStyle -string "Flwv"

### Show/Hide Sidebar
debug "Menu | View | Show Sidebar"
#   option [default] --> Show Sidebar
defaults write com.apple.finder ShowSidebar -bool true
