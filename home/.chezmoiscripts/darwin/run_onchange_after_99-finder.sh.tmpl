# --------------------------------------------------------------------------------------------------
#   @description    :   Pre-flight
# --------------------------------------------------------------------------------------------------
info "Setting log level to debug." -category "Finder" -icon "ğŸ”"
LOG_LEVEL=5

info "Closing Finder, to prevent it from overriding changes." -category "Finder" -icon "ğŸ”"
osascript -e 'tell application "Finder" to quit'
killall "cfprefsd"
# ==================================================================================================

# --------------------------------------------------------------------------------------------------
#   @description    :   Finder | Settings | General
# --------------------------------------------------------------------------------------------------
### Show these items on the desktop: Hard disks
debug "Settings | General | Show these items on the desktop: Hard disks" -category "Finder" -icon "ğŸ”"
#   option --> checked
# defaults write com.apple.finder ShowHardDrivesOnDesktop -bool true
#   option [default] --> unchecked
defaults write com.apple.finder ShowHardDrivesOnDesktop -bool false

### Show these items on the desktop: External disks
debug "Settings | General | Show these items on the desktop: External disks" -category "Finder" -icon "ğŸ”"
#   option [default] --> checked
# defaults write com.apple.finder ShowExternalHardDrivesOnDesktop -bool true
#   option --> unchecked
defaults write com.apple.finder ShowExternalHardDrivesOnDesktop -bool false

### Show these items on the desktop: CDs, DVDs, and iPods
debug "Settings | General | Show these items on the desktop: CDs, DVDs, and iPods" -category "Finder" -icon "ğŸ”"
#   option [default] --> checked
# defaults write com.apple.finder ShowRemovableMediaOnDesktop -bool true
