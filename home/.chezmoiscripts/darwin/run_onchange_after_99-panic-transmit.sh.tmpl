  error "Transmit is not installed." -category "Transmit" -icon "ðŸš›"
  exit 0
else
  debug "Transmit is installed." -category "Transmit" -icon "ðŸš›"
  info "Closing Transmit, to prevent it from overriding changes." -category "Transmit" -icon "ðŸš›"
  osascript -e 'tell application "Transmit" to quit'
  killall "cfprefsd"
fi
