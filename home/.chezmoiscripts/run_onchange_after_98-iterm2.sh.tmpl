debug "[ðŸ§¾          iTerm2] Verifying installation."

if ! check_macos_app "iTerm.app"; then
  info "[ðŸ§¾          iTerm2] Application is not installed."
  exit 0

else
  debug "[ðŸ§¾          iTerm2] Application is installed."

  if [ "${TERM_PROGRAM}" == "iTerm.app" ]; then
