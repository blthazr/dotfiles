{{- if eq .osid "darwin" }}
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/cask-drivers"
tap "homebrew/core"
tap "homebrew/services"

# Manage your dotfiles across multiple diverse machines, securely
brew "chezmoi"
# GNU File, Shell, and Text utilities
brew "coreutils"
# Get a file from an HTTP, HTTPS or FTP server
brew "curl"
# Load/unload environment variables based on $PWD
brew "direnv"
# Popular GNU data compression program
brew "gzip"
# Lightweight and flexible command-line JSON processor
brew "jq"
# Mac App Store command-line interface
tap "mas-cli/tap"
brew "mas-cli/tap/mas"
# Display directories as trees (with optional color/HTML output)
brew "tree"
# Executes a program periodically, showing output fullscreen
brew "watch"
# Internet file retriever
brew "wget"
# Process YAML, JSON, XML, CSV and properties documents from the CLI
brew "yq"

  {{- if .personal }}
  # Simple, modern, secure file encryption
  brew "age"
  # Permanent TouchID support for sudo
  tap "artginzburg/tap"
  brew "artginzburg/tap/sudo-touchid"
  # Perl lib for reading and writing EXIF metadata
  brew "exiftool"
  # Task runner / simpler Make alternative written in Go
  tap "go-task/tap"
  brew "go-task/tap/go-task"
  # LastPass command-line interface tool
  brew "lastpass-cli"
  # Editor of encrypted files
  brew "sops"
  # Cross-shell prompt for astronauts
  brew "starship"

  # Tool to flash OS images to SD cards & USB drives
  cask "balenaetcher"
  # Code snippet organizer
  cask "cacher"
  # Browser for SQLite databases
  cask "db-browser-for-sqlite"
  # Voice and text chat software
  cask "discord"
  # Control your Elgato Key Lights
  cask "elgato-control-center"
  # Assign keys, and then decorate and label them
  cask "elgato-stream-deck"
  # Calendar software
  cask "fantastical"
  # Web browser
  cask "google-chrome"
  # Terminal emulator as alternative to Apple's Terminal app
  cask "iterm2"
  # Password manager
  cask "lastpass"
  # Open-source music notation software
  cask "musescore"
  # Team communication and collaboration software
  cask "slack"
  # Text editor for code, markup and prose
  cask "sublime-text"
  # Control windows and applications right from your trackpad
  cask "swish"
  # File transfer application
  cask "transmit"
  # Open-source code editor
  cask "visual-studio-code"
  # Microsoft Excel
  mas "Microsoft Excel", id: 462058435
  # Microsoft Word
  mas "Microsoft Word", id: 462054704
  # Easy-to-use MQTT client
  mas "MQTT Explorer", id: 1455214828
  # Smart duplicate photos cleaner
  mas "PhotoSweeper", id: 463362050
  # Your to-do list for Mac & iOS
  mas "Things", id: 904280696
  {{- end }}

  {{- if .devops }}
  # Automate deployment, configuration, and upgrading
  brew "ansible"
  #
  brew "ansible-lint"
  # Cloudflare Tunnel
  tap "cloudflare/cloudflare"
  brew "cloudflare/cloudflare/cloudflared"
  # Flux CLI
  tap "fluxcd/tap"
  brew "fluxcd/tap/flux"
  # Kubernetes package manager
  brew "helm"
  # Kubernetes command-line interface
  brew "kubernetes-cli"
  # Template-free customization of Kubernetes YAML manifests
  brew "kustomize"
  # Framework for managing multi-language pre-commit hooks
  brew "pre-commit"
  # Tool to build, change, and version infrastructure
  brew "terraform"
  # GitOps support for Kubernetes
  tap "weaveworks/tap"
  brew "weaveworks/tap/gitops"

  # App to build and share containerized applications and microservices
  cask "docker"
  # Kubernetes IDE
  cask "lens"
  # Menu bar app for managing Kubernetes contexts
  cask "kubecontext"
  # Administration and development platform for PostgreSQL
  cask "pgadmin4"
  # Collaboration platform for API development
  cask "postman"
  {{- end }}

{{- end }}
