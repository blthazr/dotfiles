{{ if .personal -}}

[character]
success_symbol = "[❯](bold green)"
error_symbol = "[✖](bold red)"

[hostname]
ssh_only = true
disabled = false

[kubernetes]
format = '[$context](bold bright-green) '
disabled = false

[status]
disabled = false

[username]
disabled = false
show_always = false

{{ end }}
